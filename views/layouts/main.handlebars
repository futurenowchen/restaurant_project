    <div>
      {{#if isAuthenticated}}
      <a href="/users/logout" class="navbar-brand"><i class="fas fa-sign-out-alt"></i>登出</a>
      {{else}}
      <a href="/users/login" class="navbar-brand"><i class="fas fa-sign-out-alt"></i>登入</a>
      {{/if}}
    </div>
  </nav>
  <div class="banner"></div>
