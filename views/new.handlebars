<h1 class="mb-1 restaurant-show-title">新增餐廳</h1>

<div class="container">
  <form action="/restaurants" method="POST">

    <div class="form-group form-row justify-content-center">
      <label for="name" class="col-md-1 col-form-label">
        中文名稱
      </label>
      <div class="col-md-8">
        <input type="text" name="name" class="form-control" id="name">
      </div>
    </div>

    <div class="form-group form-row justify-content-center">
      <label for="name_en" class="col-md-1 col-form-label">
        英文名稱
      </label>
      <div class="col-md-8">
        <input type="text" name="name_en" class="form-control" id="name_en">
      </div>
    </div>

    <div class="form-group form-row justify-content-center">
      <label for="category" class="col-md-1 col-form-label">
        類別
      </label>
      <div class="col-md-8">
        <input list="categories" class="form-control" name="category" id="category">
        <datalist id="categories">
          <option>中東料理</option>
          <option>日本料理</option>
          <option>義式餐廳</option>
          <option>美式</option>
          <option>酒吧</option>
          <option>咖啡</option>
        </datalist>
      </div>
    </div>

    <div class="form-group form-row justify-content-center">
      <label for="image" class="col-md-1 col-form-label">
        照片網址
      </label>
      <div class="col-md-8">
        <input type="text" name="image" class="form-control" id="image">
      </div>
    </div>

    <div class="form-group form-row justify-content-center">
      <label for="location" class="col-md-1 col-form-label">
        地址
      </label>
      <div class="col-md-8">
        <input type="text" name="location" class="form-control" id="location">
      </div>
    </div>

    <div class="form-group form-row justify-content-center">
      <label for="phone" class="col-md-1 col-form-label">
        電話
      </label>
      <div class="col-md-8">
        <input type="text" name="phone" class="form-control" id="phone">
        <small class="text-muted form-text">範例：02 2507 0633</small>
      </div>
    </div>

    <div class="form-group form-row justify-content-center">
      <label for="google_map" class="col-md-1 col-form-label">
        Google Map 網址
      </label>
      <div class="col-md-8">
        <input type="text" name="google_map" class="form-control" id="google_map">
      </div>
    </div>

    <div class="form-group form-row justify-content-center">
      <label for="rating" class="col-md-1 col-form-label">
        評分
      </label>
      <div class="col-md-8">
        <input type="number" name="rating" class="form-control" id="rating" min="0.0" max="5.0" step="0.1">
        <small class="text-muted form-text">請輸入0-5之間的數字，如：4.7</small>
      </div>
    </div>

    <div class="form-group form-row justify-content-center">
      <label for="description" class="col-md-1 col-form-label">
        簡介
      </label>
      <div class="col-md-8">
        <input type="text" name="description" class="form-control" id="description">
      </div>
    </div>
    <div class="modal-footer">
      <button type="submit" class="btn btn-primary">確認新增</button>
    </div>
  </form>
</div>